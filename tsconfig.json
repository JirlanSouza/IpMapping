{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@entities": ["./src/entities"],
      "@useCases": ["./src/useCases"],
      "@infrastructure": ["./src/infrastructure"],
      "@adapters": ["./src/adapters"],
      "@shared": ["./src/shared"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
